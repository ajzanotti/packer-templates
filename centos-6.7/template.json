{
	"description": "CentOS 6.7 64-bit",
	"min_packer_version": "0.7.5",
	"builders": [
		{
			"type": "virtualbox-iso",
			"iso_checksum": "9d3fec5897be6b3fed4d3dda80b8fa7bb62c616bbfd4bdcd27295ca9b764f498",
			"iso_checksum_type": "sha256",
			"iso_url": "http://mirror.cc.columbia.edu/pub/linux/centos/6.7/isos/x86_64/CentOS-6.7-x86_64-minimal.iso",
			"ssh_username": "root",
			"ssh_password": "toor",
			"boot_command": [
				"<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
			],
			"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
			"guest_os_type": "RedHat_64",
			"http_directory": "centos-6.7/http",
			"shutdown_command": "echo 'packer' | shutdown -P now",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "512"],
				["modifyvm", "{{.Name}}", "--cpus", "1"]
			]
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"scripts": [
				"centos-6.7/scripts/virtualbox.sh"
			]
		}
	]
}