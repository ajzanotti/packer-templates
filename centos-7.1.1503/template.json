{
	"description": "CentOS 7.1.1503 64-bit",
	"min_packer_version": "0.7.5",
	"builders": [
		{
			"name": "zanotti_centos-7.1.1503_x86_64",
			"type": "virtualbox-iso",
			"iso_checksum": "7cf1ac8da13f54d6be41e3ccf228dc5bb35792f515642755ff4780d5714d4278",
			"iso_checksum_type": "sha256",
			"iso_url": "http://mirror.cc.columbia.edu/pub/linux/centos/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
			"ssh_username": "root",
			"ssh_password": "toor",
			"boot_command": [
				"<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
			],
			"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
			"guest_os_type": "RedHat_64",
			"http_directory": "centos-7.1.1503/http",
			"shutdown_command": "echo 'packer' | shutdown -P now",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "512"],
				["modifyvm", "{{.Name}}", "--cpus", "1"]
			]
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"scripts": [
				"centos-7.1.1503/scripts/virtualbox.sh",
				"centos-7.1.1503/scripts/vagrant.sh"
			]
		}
	],
	"post-processors": [
		{
			"type": "vagrant",
			"output": "{{.BuildName}}_{{.Provider}}{{timestamp}}.box"
		}
	]
}
