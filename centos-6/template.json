{
	"description": "CentOS 6 64-bit",
	"min_packer_version": "0.12.0",
	"builders": [
		{
			"name": "vagrant-centos-6.x86_64",
			"type": "virtualbox-iso",
			"iso_checksum": "ec49c297d484b9da0787e5944edc38f7c70f21c0f6a60178d8e9a8926d1949f4",
			"iso_checksum_type": "sha256",
			"iso_url": "{{user `mirror`}}/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
			"ssh_username": "root",
			"ssh_password": "toor",
			"boot_command": [
				"<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
			],
			"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
			"guest_os_type": "RedHat_64",
			"http_directory": "centos-6/http",
			"shutdown_command": "echo 'packer' | shutdown -P now",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
				["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
			]
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "scripts/updatePackages.sh"
		},
		{
			"type": "shell",
			"scripts": [
				"scripts/virtualbox.sh",
				"scripts/vagrant.sh"
			],
			"pause_before": "30s"
		}
	],
	"post-processors": [
		{
			"type": "vagrant",
			"output": "{{build_name}}_{{.Provider}}{{timestamp}}.box"
		}
	]
}
