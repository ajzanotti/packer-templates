{
	"description": "CentOS 7 64-bit",
	"min_packer_version": "0.12.0",
	"builders": [
		{
			"name": "vagrant-centos-7.x86_64",
			"type": "virtualbox-iso",
			"iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
			"iso_checksum_type": "sha256",
			"iso_url": "{{user `mirror`}}/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
			"ssh_username": "root",
			"ssh_password": "toor",
			"boot_command": [
				"<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
			],
			"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
			"guest_os_type": "RedHat_64",
			"http_directory": "centos-7/http",
			"shutdown_command": "echo 'packer' | shutdown -P now",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
				["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
			]
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "scripts/updatePackages.sh"
		},
		{
			"type": "shell",
			"scripts": [
				"scripts/virtualbox.sh",
				"scripts/vagrant.sh"
			],
			"pause_before": "30s"
		}
	],
	"post-processors": [
		{
			"type": "vagrant",
			"output": "{{build_name}}_{{.Provider}}{{timestamp}}.box"
		}
	]
}
